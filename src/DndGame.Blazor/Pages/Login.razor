@page "/login"
@inject FirebaseAuthService Auth
@inject NavigationManager Navigation
@inject ApiServices Api

<h3>Login</h3>

<input @bind="email" placeholder="Email" />
<input @bind="password" type="password" placeholder="Password" />
<button @onclick="HandleLogin">Login</button>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private FirebaseUser? currentUser;

    protected override async Task OnInitializedAsync()
    {
        currentUser = await Auth.GetCurrentUser();
        if (currentUser is not null)
        {
            await CheckCharacterAndRedirect(currentUser);
        }
    }

    private async Task HandleLogin()
    {
        currentUser = await Auth.SignInWithEmailPassword(email, password);
        if (currentUser is not null)
        {
            await CheckCharacterAndRedirect(currentUser);
        }
    }

    private async Task CheckCharacterAndRedirect(FirebaseUser user)
    {
        var dbUser = await Api.GetUserAsync(user.Uid, user.Email);
        Navigation.NavigateTo(dbUser?.Character == null ? "/character-creation" : "/");
    }
}
