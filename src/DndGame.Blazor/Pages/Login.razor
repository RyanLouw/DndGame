@page "/login"
@inject FirebaseAuthService Auth
@inject NavigationManager Navigation
@inject HttpClient Http
@using System.Net.Http.Json

<h3>Login</h3>

<input @bind="email" placeholder="Email" />
<input @bind="password" type="password" placeholder="Password" />
<button @onclick="HandleLogin">Login</button>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        userId = await Auth.GetCurrentUser();
        if (!string.IsNullOrEmpty(userId))
        {
            var result = await Http.GetFromJsonAsync<UserResponse>($"api/dnd/user?firebaseId={userId}&email={email}");
            if (result?.needsCharacterCreation == true)
            {
                Navigation.NavigateTo("/character-creation");
            }
            else
            {
                Navigation.NavigateTo("/");
            }
        }
    }

    private class UserResponse
    {
        public bool needsCharacterCreation { get; set; }
    }

    private async Task HandleLogin()
    {
        userId = await Auth.SignInWithEmailPassword(email, password);
        if (!string.IsNullOrEmpty(userId))
        {
            var result = await Http.GetFromJsonAsync<UserResponse>($"api/dnd/user?firebaseId={userId}&email={email}");
            if (result?.needsCharacterCreation == true)
            {
                Navigation.NavigateTo("/character-creation");
            }
            else
            {
                Navigation.NavigateTo("/");
            }
        }
    }
}
