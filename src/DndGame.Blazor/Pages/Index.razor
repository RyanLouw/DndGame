@page "/"
@inject FirebaseAuthService Auth
@inject HttpClient Http
@inject NavigationManager Navigation

<h1>Welcome to DndGame</h1>

@if (!string.IsNullOrEmpty(userId))
{
    <p>Logged in as @userId</p>
}
else
{
    <p><NavLink href="login">Login</NavLink></p>
}

@code {
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        userId = await Auth.GetCurrentUser();
        if (!string.IsNullOrEmpty(userId))
        {
            var result = await Http.GetFromJsonAsync<GetUserResponse>($"api/dnd/user?firebaseId={userId}&email=");
            if (result?.needsCharacterCreation == true)
            {
                Navigation.NavigateTo("/new-character");
            }
        }
    }

    private class GetUserResponse
    {
        public bool needsCharacterCreation { get; set; }
    }
}
